        {
          "manifest": {
            "release": "greenhouse",
            "chartPath": "charts/manager",
            "crdOnly": false,
            "webhook": {
              "devMode": false,
              "dockerFile": "./",
              "envs": [
                {
                  "name": "WEBHOOK_ONLY",
                  "value": "false"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}