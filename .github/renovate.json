{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assigneesFromCodeOwners": true,
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "constraints": {
    "go": "1.25"
  },
  "ignoreDeps": [
    "github.com/dexidp/dex"
  ],
  "flux": {
    "managerFilePatterns": [
      "/^.*/.*/flux-installation-release\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Bump envtest version in the Makefile",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "ENVTEST_K8S_VERSION\\s*\\?=\\s*(?<currentValue>.?(?:\\d+\\.){0,2}\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "kubernetes-sigs/controller-tools",
      "extractVersionTemplate": "^envtest.v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Bump controller tools version in the Makefile",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "CONTROLLER_TOOLS_VERSION\\s*\\?=\\s*(?<currentValue>.?(?:\\d+\\.){0,2}\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "kubernetes-sigs/controller-tools",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Bump golangci-lint version in the Makefile",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "GOLINT_VERSION\\s*\\?=\\s*(?<currentValue>.?(?:\\d+\\.){0,2}\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "golangci/golangci-lint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Bump ginkolinter version in the Makefile",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "GINKGOLINTER_VERSION\\s*\\?=\\s*(?<currentValue>.?(?:\\d+\\.){0,2}\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "nunnatsa/ginkgolinter",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Bump kustomize version in the Makefile",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "KUSTOMIZE_VERSION\\s*\\?=\\s*(?<currentValue>.?(?:\\d+\\.){0,2}\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "kubernetes-sigs/kustomize",
      "extractVersionTemplate": "^kustomize/v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Bump flux kustomize version",
      "managerFilePatterns": [
        "/(?:^|flux/.*/)kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "github.com.(?<packageName>.*).manifests.install.ref.(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "groupName": "Github Actions updates",
      "groupSlug": "github-actions",
      "matchManagers": [
        "github-actions"
      ],
      "extends": [
        "helpers:pinGitHubActionDigests"
      ],
      "minimumReleaseAge": "14 days"
    },
    {
      "groupName": "npm dependencies",
      "matchDatasources": [
        "npm"
      ],
      "minimumReleaseAge": "14 days"
    },
    {
      "groupName": "golang",
      "matchDatasources": [
        "docker",
        "go-version"
      ],
      "minimumReleaseAge": "14 days",
      "matchPackageNames": [
        "/golang/"
      ]
    },
    {
      "groupName": "helm",
      "groupSlug": "helm-go",
      "matchDatasources": [
        "go"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "14 days",
      "matchPackageNames": [
        "helm.sh/helm/v3{/,}**"
      ]
    },
    {
      "groupName": "kubernetes packages",
      "groupSlug": "kubernetes-go",
      "matchDatasources": [
        "go"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "14 days",
      "matchPackageNames": [
        "k8s.io/api{/,}**",
        "k8s.io/apiextensions-apiserver{/,}**",
        "k8s.io/apimachinery{/,}**",
        "k8s.io/apiserver{/,}**",
        "k8s.io/cli-runtime{/,}**",
        "k8s.io/client-go{/,}**",
        "k8s.io/cloud-provider{/,}**",
        "k8s.io/cluster-bootstrap{/,}**",
        "k8s.io/code-generator{/,}**",
        "k8s.io/component-base{/,}**",
        "k8s.io/controller-manager{/,}**",
        "k8s.io/cri-api{/,}**",
        "k8s.io/csi-translation-lib{/,}**",
        "k8s.io/kube-aggregator{/,}**",
        "k8s.io/kube-controller-manager{/,}**",
        "k8s.io/kube-proxy{/,}**",
        "k8s.io/kube-scheduler{/,}**",
        "k8s.io/kubectl{/,}**",
        "k8s.io/kubelet{/,}**",
        "k8s.io/legacy-cloud-providers{/,}**",
        "k8s.io/metrics{/,}**",
        "k8s.io/mount-utils{/,}**",
        "k8s.io/pod-security-admission{/,}**",
        "k8s.io/sample-apiserver{/,}**",
        "k8s.io/sample-cli-plugin{/,}**",
        "k8s.io/sample-controller{/,}**",
        "k8s.io/utils{/,}**",
        "sigs.k8s.io/controller-runtime{/,}**"
      ]
    },
    {
      "groupName": "flux packages",
      "groupSlug": "flux-go",
      "matchDatasources": [
        "go"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "14 days",
      "matchPackageNames": [
        "github.com/fluxcd{/,}**"
      ]
    },
    {
      "description": "Update flux installation when a new release is available",
      "groupName": "flux-installation",
      "matchPackageNames": [
        "cloudoperators/greenhouse"
      ],
      "ignoreUnstable": false
    },
    {
      "groupName": "controller-tools (Makefile)",
      "groupSlug": "controller-tools-regex",
      "matchManagers": [
        "custom.regex"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "matchDepNames": [
        "kubernetes-sigs/controller-tools"
      ],
      "minimumReleaseAge": "14 days"
    },
    {
      "groupName": "golangci-lint (Makefile)",
      "groupSlug": "golangci-lint",
      "matchManagers": [
        "custom.regex"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "matchDepNames": [
        "golangci/golangci-lint",
        "nunnatsa/ginkgolinter"
      ],
      "minimumReleaseAge": "14 days"
    },
    {
      "groupName": "ginkgo & gomega updates",
      "groupSlug": "ginkgo-gomega",
      "matchDatasources": [
        "go"
      ],
      "minimumReleaseAge": "14 days",
      "matchPackageNames": [
        "github.com/onsi{/,}**"
      ]
    },
    {
      "groupName": "golang.org/x packages",
      "groupSlug": "golang-x-go",
      "matchDatasources": [
        "go"
      ],
      "minimumReleaseAge": "14 days",
      "matchPackageNames": [
        "golang.org/x{/,}**"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "separateMinorPatch": true
}
